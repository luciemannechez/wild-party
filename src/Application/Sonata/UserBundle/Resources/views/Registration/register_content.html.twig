{% extends "ApplicationSonataUserBundle:Profile:action.html.twig" %}
{% block javascripts %}
    <script>
        function PlaySound(path) {
            var audioElement = document.createElement('audio');
            audioElement.setAttribute('src', path);
            audioElement.play();
        }
    </script>
{% endblock %}

{% block body %}
<div class="panel panel-success">
    <div class="panel-heading">
        <h2 class="panel-title">{{ 'title_user_registration'|trans({}, 'SonataUserBundle') }}</h2>
    </div>
    <div class="panel-body">
        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal">
            {{ form_widget(form) }}
            <div class="form-actions">
                <input type="submit" onclick="javascript:PlaySound('{{ asset('bundles/wildparty/hey.mp3') }}');" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-success pull-right" />
            </div>
        </form>
    </div>
</div>
    {% endblock%}